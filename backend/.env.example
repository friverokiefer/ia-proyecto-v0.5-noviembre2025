# =====================================
# IA ENGINE / OPENAI
# =====================================
# API Key de OpenAI usada por el backend
OPENAI_API_KEY=

# Modelos de texto
OPENAI_TEXT_JSON=gpt-4o
OPENAI_TEXT_LITE=gpt-4o-mini
OPENAI_TEXT_QUALITY=gpt-4o

# Modelo de imágenes
OPENAI_IMAGE=gpt-image-1

# Versionado de prompts (para controlar cambios en el motor)
PROMPT_BLOG_VERSION=v1

# =====================================
# GOOGLE CLOUD / GCS
# =====================================


GCP_PROJECT_ID= # ID del proyecto en GCP
GCP_BUCKET_NAME= # Bucket donde el backend escribe/lee assets
GCP_PREFIX=dev # Prefijo lógico (dev|stg|prod)
GOOGLE_APPLICATION_CREDENTIALS=./backend/.secrets/service-account.json # Ruta local al JSON de cuenta de servicio
GCP_PUBLIC_READ=false # ¿Los objetos se exponen con ACL pública? (true/false)
GCP_URL_STYLE=path # Cómo se construyen las URLs públicas del bucket (path|virtual_hosted)
GENERATED_BASE_PATH=./backend/tmp/generated # Base local donde se guardan assets generados antes de subirlos

# =====================================
# FRONTEND / VITE (COHERENCIA CON GCS)
# =====================================

# Estos valores deben coincidir con los usados por el frontend
VITE_GCS_BUCKET=
VITE_GCS_PREFIX=dev

# =====================================
# SALESFORCE MARKETING CLOUD (SFMC)
# =====================================


SFMC_AUTH_URL= # Endpoint de autenticación OAuth2 de SFMC
SFMC_CLIENT_ID= # Credenciales de la Installed Package / API Integration
SFMC_CLIENT_SECRET=
SFMC_ACCOUNT_ID= # MID (Account ID) de SFMC
SFMC_DEFAULT_CATEGORY_ID= # Categoría por defecto donde se crean assets/emails

# =====================================
# IA ENGINE (INTEGRACIÓN DESDE BACKEND)
# =====================================

IA_ENGINE_ENABLED=true # Si el backend delega o no en el microservicio de IA
IA_ENGINE_BASE_URL=http://127.0.0.1:8000 # URL base del microservicio IA Engine
